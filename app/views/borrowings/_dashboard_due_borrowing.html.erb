<tr class="hover:bg-yellow-50">
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center">
      <div class="flex-shrink-0 h-10 w-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
      </div>
      <div>
        <div class="text-sm font-medium text-gray-900">
          <%= link_to dashboard_due_borrowing.book.title, dashboard_due_borrowing.book, class: "hover:text-blue-600 hover:underline" %>
        </div>
        <div class="text-sm text-gray-500"><%= dashboard_due_borrowing.book.author %></div>
      </div>
    </div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="text-sm text-gray-900"><%= dashboard_due_borrowing.user.email %></div>
  </td>
  <td class="px-6 py-4 whitespace-nowrap">
    <%= dashboard_due_borrowing.due_at.to_date.to_formatted_s(:long) %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
    <%= button_to 'Mark Returned', return_borrowing_path(dashboard_due_borrowing),
        method: :post,
        class: "text-green-600 hover:text-green-900",
        form: { data: { turbo_confirm: "Mark '#{dashboard_due_borrowing.book.title}' as returned?" } } %>
  </td>
</tr>